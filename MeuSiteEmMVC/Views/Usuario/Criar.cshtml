@using MeuSiteEmMVC.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuario";
}
<div class="text-center">
    <h1 class="display-4">Criar Usuario</h1>
 
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

  <div class="form-group">
    <label for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Escreva o Nome do Usuario">
    @Html.ValidationMessageFor(x=>x.Nome)
  </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do Usuario">
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o numero do Login do Usuario">
        @Html.ValidationMessageFor(x=>x.Login)
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite a Senha do Usuario">
        @Html.ValidationMessageFor(x=>x.Senha)
    </div>
    <div class="form-group">
        <label for="Perfil">Perfil</label>
        <select asp-for="Perfil" class="form-control">
           <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
       </select>
    </div>

    <br>
    <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
    <br></br>
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>


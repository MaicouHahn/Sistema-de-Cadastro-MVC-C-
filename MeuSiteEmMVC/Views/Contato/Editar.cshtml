@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id"></input>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Escreva o Nome do contato">
        @Html.ValidationMessageFor(x=>x.Nome)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o numero do celular">
        @Html.ValidationMessageFor(x=>x.Celular)
    </div>
   <br></br>
    <button type="submit" class="btn btn-primary w-100">Confirmar Edição</button>
    <br></br>
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

